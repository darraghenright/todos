<%= unless empty?(@todo_list) do %>
  <div class="border-t border-gray-200 flex justify-between p-3 text-sm">
    <div><%= count_incomplete(@todo_list) %> <%= item_or_items(@todo_list) %> left</div>
    <div>
      <button class="text-gray-500 mx-2" phx-click="filter_all">All</button>
      <button class="text-gray-500 mx-2" phx-click="filter_active">Active</button>
      <button class="text-gray-500 mx-2" phx-click="filter_complete">Complete</button>
    </div>
    <button class="text-gray-700" phx-click="clear_complete">Clear complete</button>
  </div>
<% end %>
